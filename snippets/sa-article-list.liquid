<div class="cards critical-clear" data-animate>
  <a href="{{ article.url }}" class="card__wrapper card--article">
    {% if article.image %}
      {% assign article_image = article.image %}
    {% else %}
      {% assign article_image = article.products.first %}
    {% endif %}

    {% if article_image != blank %}
      {% comment %}{% include 'sa-card-image-recent', type: article_image, grid_style: grid_style %}{% endcomment %}
      <div class="card__image-wrapper">
      <img src="{{article.image | img_url: '200x200', crop: 'center' }}" alt="{{ type.alt | escape }}" class="card__image">
    </div>
    {% endif %}

    <div class="card__info">

      <h1 class="card__name">{{ article.tags }}</h1>
      <hr class="underline">
      <h3 class="card__name">{{ article.title }}</h3>

    </div>
  </a>
</div>