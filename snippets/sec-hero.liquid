{% if block.settings.image != blank %}
  <style>
    .hero--{{ block.id }} {
      background-position: {{ block.settings.alignment }};
    }
  </style>
{% endif %}

{% if block.settings.show_overlay %}
  <style>
    .hero--{{ block.id }}.hero__overlay::before {
      background-color: {{ block.settings.overlay_color }};
      opacity: {{ block.settings.overlay_opacity }};
    }

    .hero--{{ block.id }} .hero__overlay-title--overlay,
    .hero--{{ block.id }} .mega-subtitle {
      color: {{ block.settings.overlay_text }};
    }
  </style>
{% endif %}

<div class="hero hero--{{ block.id }} hero--{{ block.settings.hero_size }}{% if block.settings.show_overlay %} hero__overlay{% endif %} lazyload" data-bgset="{% include 'bgset', image: block.settings.image %}" data-block-id="{{ block.id }}" data-block-type="hero">
  <div class="hero__inner">
    <div class="page-width text-center">
      {% if block.settings.title != blank %}
        <h2 class="hero__overlay-title separator{% if block.settings.show_overlay %} hero__overlay-title--overlay{% endif %}{% if block.settings.text_size == 'large' %} h1{% endif %}" data-animate>{{ block.settings.title | escape }}</h2>
      {% endif %}
      {% if block.settings.text != blank %}
        <div class="rte-setting mega-subtitle{% if block.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ block.settings.text }}</div>
      {% endif %}
      {% if block.settings.button_label != blank %}
        <a href="{{ block.settings.button_link }}" class="btn{% if block.settings.use_second_button %} btn--secondary{% endif %} hero__btn">
          {{ block.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>