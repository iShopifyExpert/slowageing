<style>
  .newsletter-wrapper--{{ block.id }} input[type='email']::-webkit-input-placeholder {
    color: {{ block.settings.text_color }};
  }
  .newsletter-wrapper--{{ block.id }} input[type='email']::-moz-placeholder {
    color: {{ block.settings.text_color }};
  }
  .newsletter-wrapper--{{ block.id }} input[type='email']:-ms-input-placeholder {
    color: {{ block.settings.text_color }};
  }
  .newsletter-wrapper--{{ block.id }} input[type='email']::placeholder {
    color: {{ block.settings.text_color }};
  }
  @media screen and (min-width: 750px) {
    .newsletter-wrapper--{{ block.id }} .input-group--underline {
      border-bottom: 2px solid {{ block.settings.text_color }};
    }
  }
  @media screen and (max-width: 749px) {
    .newsletter-wrapper--{{ block.id }} .input-group__field {
      border-bottom: 2px solid {{ block.settings.text_color }} !important;
    }
  }
  .newsletter-wrapper--{{ block.id }} .icon {
    fill: {{ block.settings.text_color }};
  }
  .newsletter-wrapper--{{ block.id }} .btn--newsletter__submit {
    color: {{ block.settings.text_color }};
    fill: {{ block.settings.text_color }};
  }
  .newsletter-wrapper--{{ block.id }} button {
    border: 2px solid {{ block.settings.text_color }};
    outline-color: {{ block.settings.text_color }} !important;
  }
  .newsletter-wrapper--{{ block.id }} .form-success {
    color: {{ block.settings.text_color }};
  }

  {% if block.settings.background_color != blank %}
    .newsletter-wrapper--{{ block.id }} {
      background-color: {{ block.settings.background_color }};
    }
  {% endif %}
</style>

<div class="newsletter-wrapper newsletter-wrapper--{{ block.id }} one-whole" data-section-id="{{ block.id }}" data-section-type="newsletter">
  <div class="page-width">
    {% form 'customer' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="input-group--underline" data-animate>
        <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ block.settings.heading | escape }}" name="contact[email]" class="input-group__field" id="EmailField{{ block.id }}" aria-label="{{ 'general.newsletter_form.newsletter_placeholder' | t }}" autocorrect="off" autocapitalize="off">
        <div class="input-group__btn input-group__btn--newsletter">
          <button type="submit" class="btn--newsletter__submit" tabindex="-1">
            {% include 'icon-arrow-right' %}
            <span class="visually-hidden">{{ 'sections.newsletter.submit' | t }}</span>
          </button>
        </div>
      </div>
      <div class="newsletter__message" aria-role="alert">
        {% if form.posted_successfully? %}
          <p class="form-success" aria-role="alert">
            {% unless block.settings.success_message == blank %}
              {{ block.settings.success_message | escape }}
            {% endunless %}
          </p>
        {% endif %}
        {{ form.errors | default_errors }}
      </div>
    {% endform %}
  </div>
</div>
