<style>
  .btn--secondary.pagination__btn {
    height: auto;
    width: auto;
    padding: 5px 18px 8px;
}
  .pagination__btn_disabled.pagination__btn {
    fill: #a2a2a2;
    color: #a2a2a2;
    border: #a2a2a2;
    outline: 2px solid;
}
.pagination__btn_disabled.btn--secondary::after {
    outline: 2px solid #a2a2a2;
}
.pagination__btn_disabled.btn--secondary:hover::after {
    outline: 2px solid #a2a2a2;
}
a.pagination__page {
    font-size: 2rem;
}
</style>
<div class="pagination">
  {% if paginate.previous %}
    <a href="{{ paginate.previous.url }}" class="btn--secondary pagination__btn">
      {% include 'icon-arrow-left' %}
      <span class="icon__fallback-text">{{ 'general.pagination.previous' | t }}</span>
    </a>
  {% else %}
    <button class="btn--secondary pagination__btn pagination__btn_disabled" disabled>
      {% include 'icon-arrow-left' %}
      <span class="icon__fallback-text">{{ 'general.pagination.previous' | t }}</span>
    </button>
  {% endif %}

  <div class="pagination__pages">
    {% for part in paginate.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="pagination__page">{{ part.title }}</a>
      {% else %}
        <span class="pagination__page pagination__page--current">{{ part.title }}</span>
      {% endif %}
    {% endfor %}
  </div>

  {% if paginate.next %}
    <a href="{{ paginate.next.url }}" class="btn--secondary pagination__btn">
      {% include 'icon-arrow-right' %}
      <span class="icon__fallback-text">{{ 'general.pagination.next' | t }}</span>
    </a>
  {% else %}
    <button class="btn--secondary pagination__btn pagination__btn_disabled" disabled>
      {% include 'icon-arrow-right' %}
      <span class="icon__fallback-text">{{ 'general.pagination.next' | t }}</span>
    </button>
  {% endif %}
</div>
